<p id="notice"><%= notice %></p>

<h1>Admin Achievements</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_achievements.each do |admin_achievement| %>
      <tr>
        <td><%= admin_achievement.user %></td>
        <td><%= admin_achievement.title %></td>
        <td><%= admin_achievement.description %></td>
        <td><%= admin_achievement.status %></td>
        <td><%= link_to 'Show', admin_achievement %></td>
        <td><%= link_to 'Edit', edit_admin_achievement_path(admin_achievement) %></td>
        <td><%= link_to 'Destroy', admin_achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

