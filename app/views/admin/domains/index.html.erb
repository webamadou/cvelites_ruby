<p id="notice"><%= notice %></p>

<h1>Admin Domains</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Parent</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_domains.each do |admin_domain| %>
      <tr>
        <td><%= admin_domain.name %></td>
        <td><%= admin_domain.description %></td>
        <td><%= admin_domain.parent_id %></td>
        <td><%= admin_domain.status %></td>
        <td><%= link_to 'Show', admin_domain %></td>
        <td><%= link_to 'Edit', edit_admin_domain_path(admin_domain) %></td>
        <td><%= link_to 'Destroy', admin_domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Domain', new_admin_domain_path %>
