<p id="notice"><%= notice %></p>

<h1>Admin Languages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_languages.each do |admin_language| %>
      <tr>
        <td><%= admin_language.name %></td>
        <td><%= admin_language.code %></td>
        <td><%= admin_language.status %></td>
        <td><%= link_to 'Show', admin_language %></td>
        <td><%= link_to 'Edit', edit_admin_language_path(admin_language) %></td>
        <td><%= link_to 'Destroy', admin_language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Language', new_admin_language_path %>
