<p id="notice"><%= notice %></p>

<h1>Admin Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Legal status</th>
      <th>Address</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_schools.each do |admin_school| %>
      <tr>
        <td><%= admin_school.name %></td>
        <td><%= admin_school.description %></td>
        <td><%= admin_school.legal_status %></td>
        <td><%= admin_school.address %></td>
        <td><%= admin_school.country %></td>
        <td><%= link_to 'Show', admin_school %></td>
        <td><%= link_to 'Edit', edit_admin_school_path(admin_school) %></td>
        <td><%= link_to 'Destroy', admin_school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

