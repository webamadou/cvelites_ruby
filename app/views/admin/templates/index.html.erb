<p id="notice"><%= notice %></p>

<h1>Admin Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Domain</th>
      <th>Views</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_templates.each do |admin_template| %>
      <tr>
        <td><%= admin_template.name %></td>
        <td><%= admin_template.description %></td>
        <td><%= admin_template.domain %></td>
        <td><%= admin_template.views %></td>
        <td><%= admin_template.status %></td>
        <td><%= link_to 'Show', admin_template %></td>
        <td><%= link_to 'Edit', edit_admin_template_path(admin_template) %></td>
        <td><%= link_to 'Destroy', admin_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

