<% content_for :dashboard_content do %>
<div class="card">
    <div class="card-header card-header-primary">
      <p id="notice"><%= notice %></p>
      <h3>Templates</h3>
    </div>
    <div class="card-body">
      <%= link_to 'Add a template', new_admin_template_path, class: 'btn btn-primary' %>
      <table id="template-dt" class="table table-striped table-bordered " width="100%" data-source="<%= admin_templates_path(format: :json) %>">
        <thead>
          <tr>
            <th>Name</th>
            <th>Views</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>

        <tbody></tbody>
      </table>
    </div>
</div>
<% end %>
<%= render template: 'layouts/material_dashboard' %>
