<% content_for :dashboard_content do %>
  <div class="card">
    <div class="card-header card-header-primary">
      <p id="notice"><%= notice %></p>
      <h3>Users</h3>
    </div>
    <div class="card-body">
      <%= link_to 'Add a user', new_admin_user_path, class: 'btn btn-primary' %>
        <table id="users-dt" class="table table-bordered table-striped" width="100%" data-source="<%= admin_users_path(format: :json) %>">
          <thead>
            <tr>
              <th>Name</th>
              <th>Title</th>
              <th>Birth Infos</th>
              <th>Address</th>
              <th>Views</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>

        <br>

        <%= link_to 'New Admin User', new_admin_user_path %>
    </div>
  </div>
<% end %>

<%= render template: 'layouts/material_dashboard' %>